.top{
	margin:0 auto;
	width: 970px;
	padding: 12px 0 0px 0;
}
.top-inner{
	padding-right: 14px;
}
.logo{
	width: 351px;
	height: 68px;
	background: url("<%= image_url 'logo_03.png' %>") no-repeat;
}
.top dl{
	font-size: 14px;
	font-family: "Hiragino Sans GB", "simsun";
	text-align: right;
}
.top dt{
	height: 33px;
	line-height: 36px;
}
.top dt a, .top dd a{
	color: #5e5e5e;
}
.nav{
	width: 100%;
	height: 42px;
	background: url("<%= image_url 'nav_07.png' %>") repeat-x;
}
.nav-inner{
	margin: 0 auto;
	width: 970px;
}
.nav li{
	float: left;
}
.nav a{
	display: block;
	padding: 0 33px;
	height: 45px;
	line-height: 45px;
	color: #fff;
	cursor: pointer;
}
.nav a:hover{
	text-decoration: underline;
}
.nav ul{
	padding-left: 138px;
}
.nav .active a{
	background-color: #fff;
	color: #d0345c;
}
.banner{
	height: 312px;
	position: relative;
}
.pic{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 312px;
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
}

.pic1{
	background-image:url("<%= image_url '1.jpg' %>");
}
.pic2{
	background-image: url("<%= image_url '2_2.gif' %>");
}
.pic3{
	background-image: url("<%= image_url '3.jpg' %>");
}
.pic4{
	background-image: url("<%= image_url '4.jpg' %>");
}

.content{
	margin: 0 auto;
	width: 970px;
	padding-top: 18px;
}
.content h3{
	height: 30px;
	line-height: 30px;
	font-size: 16px;
	color: #d0345c;
	border-bottom: 1px solid #ef6c74;
}
.content h3 span{
	padding-left: 13px;
	color: #5f5f5f;
}
.content-l{
	padding-bottom: 10px;
	width: 590px;
}
.content-l h2{
	margin-top: 20px;
	padding-left: 10px;
	height: 28px;
	line-height: 28px;
	color: #fff;
	background:url("<%= image_url 'h2_12.png' %>") no-repeat;
}
.content-l p{
	padding-top: 15px;
	line-height: 24px;
	font-size: 12px;
	font-family: "simsun", serif;
	color: #777;
}
.content h3 a{
	font-size: 12px;
	font-family: "simsun", serif;
	color: #616161;
}
.content-r {
	margin-top: 10px;
	margin-left: 54px;
}
.adress{
	height: 150px;
}
.adress p{
	padding-top: 9px;
	font-family: "simsun", serif;
	line-height: 29px;
	font-size: 12px;
	color: #777;
}
.footer .line{
	height: 8px;
	background: url("<%= image_url 'line_16.png' %>") repeat-x;
	border-top: 1px solid #f2efe8;
	border-bottom: 1px solid #f2efe8;
}
.f-b{
	padding-top: 7px;
	height: 99px;
	background: url("<%= image_url 'footer_20.png' %>") repeat-x;
}
.f-b p{
	text-align: center;
	font-family: "simsun", serif;
	line-height: 29px;
	font-size: 12px;
	color: #5e5e5e;
}
.banner-inner{
	margin: 0 auto;
	width: 1000px;
	height: 312px;
	position: relative;
}
.banner-inner .btn{
	position: absolute;
	top: 284px;
	right: 74px;
	z-index: 10;
}
.btn{
	display: inline-block;
	zoom:1;
	_display: inline;
}
.banner-inner .btn li{
	float: left;
	margin-left: 15px;
	width: 10px;
	height: 10px;
	background-image: url("<%= image_url 'point_03.png' %>");
	background-position: left top;
	background-repeat: no-repeat;
	cursor: pointer;
}
.banner-inner .btn .active{
	background-position:-10px 0;
}
