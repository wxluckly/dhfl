<div class='container'>
<div class="row">
  <div class="span3 pull-right">
    <%= link_to '新增', new_admin_user_path, class: 'pull-right btn btn-warning','data-no-turbolink' => true %>
  </div>

  <div class="span12">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>邮箱</th>
          <th>是否管理员</th>
          <th>创建时间</th>
        </tr>
      </thead>
      <tbody>

        <% @users.each do |user| %>
        <tr>
        <td><%=user.email%></td>
        <td><span class="label label-<%= user.is_admin ? 'success' : 'danger'%>" </span><%= user.is_admin ? '是' : '否'%></td>
        <td><%=user.created_at.to_s %></td>
        <td>
          <%= link_to '编辑',edit_admin_user_path(user), 'data-no-turbolink' => true %>
          <%= link_to '删除', admin_user_path(user),method: :delete, data: { confirm: '确定删除用户么？' } %>
        </td>
        </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>
</div>
