.col-xs-6.pull-right
  = link_to '新增', new_admin_user_path, class: 'btn btn-success pull-right'
.clearfix
%br
  %table.table.table-bordered
    %thead
      %tr
        %th 邮箱
        %th 是否管理员
        %th 创建时间
        %th
    %tbody
      - @users.each do |user|
        %tr
          %td= user.email
          %td
            - if user.is_admin
              %span.label.label-success 是
            - else
              %span.label.label-danger 否
          %td= user.created_at.to_s
          %td
            = link_to '编辑',edit_admin_user_path(user)
            = link_to '删除', admin_user_path(user),method: :delete, data: { confirm: '确定删除用户么？' }
