<style type="text/css">
  .banner{
    background-image:url("<%= image_url 'jobs_02.jpg' %>");
    background-position: top center;
    background-repeat: no-repeat;
    background-size: cover;
    height: 349px;
  }
  .content{
    padding-bottom: 10px;
  }
  .content .title{
    padding-top: 23px;
    margin-left: 52px;
    height: 55px;
  }
  .content .title h3{
    position: relative;
    padding-left: 73px;
    height: 33px;
    line-height: 33px;
    border-bottom: 0;
    background-color: #ccc;
    color: #222;
  }
  .content .oringe{
    position: absolute;
    top: -23px;
    left: -39px;
    width: 78px;
    height: 78px;
    background-color: #ffa415;
    border-radius: 50%;
  }
  dl{
    padding-left: 128px;
  }
  dt{
    height: 29px;
    color: #767676;
  }
  dd{
    height: 30px;
    font-size: 12px;
    color: #767676;
  }
</style>
<%= render 'top' %>
<%= render 'nav' %>
<div class="banner"></div>

<div class="content">
  <div class="path">
    您现在的位置:首页>人才招聘
  </div>
  <% @jobs.each do |job| %>
    <div class="title">
      <h3>
        <div class="oringe"></div>
        <%= job.name%>
      </h3>
    </div>
    <dl>
      <%=sanitize job.content%>
    </dl>
  <% end %>
  <% if @jobs.blank? %>
    <div class="title">
      <h3>
        <div class="oringe"></div>
        暂无
      </h3>
    </div>
  <% end %>
  <br>
  <dl>
    <dt>联系我们：</dt>
    <dd>发送简历至邮箱：nnli@dinghuifl.com</dd>
    <dd>工作时间：9:00至17：00 电话：010-59856786 （双休、国家法定节假日 。）</dd>
  </dl>
</div>
<%= render 'footer' %>
