<%= render 'top' %>
<%= render 'nav' %>
<div class="banner banner-news"></div>

<div class="content content-news">
  <%= render 'left' %>
  <div class="right-liebiao fl">
    <ul>
      <% @articles.each do |article|%>
      <li>
        <a href="/sub/news/<%= article.id%>"><%= article.title%></a>
        <span class="time"><%= article.created_at.strftime("%Y-%m-%d")%></span>
      </li>
      <% end %>
      <div class="box">
        <%= will_paginate @articles,:inner_window => 4, :outer_window => 1,  previous_label: '上一页', next_label: '下一页'%>
      </div>
    </ul>
  </div>

</div>

</div>

<%= render 'footer' %>
